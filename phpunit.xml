<phpunit
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
  colors="true">
  <testsuites>
    <testsuite name="All">
      <directory phpVersion="5.4.0" suffix="Test.php">tests</directory>
    </testsuite>
    <testsuite name="Formatters">
      <directory phpVersion="5.4.0" suffix="Test.php">tests/Formatters</directory>
    </testsuite>
    <testsuite name="Normalizers">
      <directory phpVersion="5.4.0" suffix="Test.php">tests/Normalizers</directory>
    </testsuite>
    <testsuite name="Schema">
      <directory phpVersion="5.4.0" suffix="Test.php">tests/Schema</directory>
    </testsuite>
    <testsuite name="Scrapers">
      <directory phpVersion="5.4.0" suffix="Test.php">tests/Scrapers</directory>
    </testsuite>
    <testsuite name="Transformers">
      <directory phpVersion="5.4.0" suffix="Test.php">tests/Transformers</directory>
    </testsuite>
  </testsuites>
</phpunit>